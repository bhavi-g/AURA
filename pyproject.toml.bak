[tool.black]
line-length = 100
target-version = ["py311"]
exclude = '''
(
  ^\.git
| ^\.venv
| ^build
| ^dist
)
'''

[tool.isort]
profile = "black"
line_length = 100

[tool.ruff]
target-version = "py311"
line-length = 100

[tool.ruff.lint]
select = ["E", "F", "I", "B", "UP", "T20"]
ignore = []

[tool.ruff.lint.per-file-ignores]
"evaluation/*.py" = ["T201"]  # allow prints in CLI eval scripts
